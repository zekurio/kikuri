    "version": "0.2.0",
    "configurations": [
      {
        "type": "firefox",
        "request": "launch",
        "name": "Debug Webapp",
        "webRoot": "${workspaceFolder}",
        "url": "http://localhost:5173",
        "preLaunchTask": "run-web-app"
      },
      {
        "name": "Debug Backend",
        "type": "go",
        "request": "launch",
        "mode": "auto",
        "program": "${workspaceFolder}/cmd/daemon/main.go",
        "cwd": "${workspaceFolder}",
        "env": {},
        "args": ["-c", "config/config.toml"]
      }
    ]
  }